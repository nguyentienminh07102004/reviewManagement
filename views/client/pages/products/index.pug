extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  div(class="container my-3")
    div(class="row")
      div(class="col-12") 
        +box-head("Products List") 
    div(class="row")
      each value in product
        div(class="col-4 mb-3")
          a(href=`/products/${value.slug}`) 
            div(class="product-item")
              div(class="inner-image")
                img(src=value.thumbnail, alt=value.title)
              div(class="inner-content")
                h3(class="inner-title") #{value.title}
                div(class="inner-price-new") #{value.price}
                div(class="inner-price-old") #{value.price * 2}
                div(class="inner-discount") -#{value.discountPercentage}%