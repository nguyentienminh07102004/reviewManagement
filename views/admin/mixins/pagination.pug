mixin pagination(pagination)
  nav
    ul(class="pagination")
      if(pagination.totalPage > 1)
        if(pagination.currentPage > 1)
          li(class="page-item")
            button(class="page-link" button-page=1) First
          li(class="page-item")
            button(class="page-link" button-page=pagination.currentPage - 1) Previous
        if(pagination.currentPage === 1)
          -for(let i = 0; i <= (pagination.totalPage > 2 ? 2 : pagination.totalPage - 1); i++)
            li(class=`page-item ${i === 0 ? "active" : ""}`)
              button(class="page-link" button-page=pagination.currentPage + i) #{pagination.currentPage + i}
        else if(pagination.currentPage === pagination.totalPage)
          -for(let i = (pagination.totalPage - 2 >= 1 ? -2 : 1 - pagination.totalPage); i <= 0; i++)
            li(class=`page-item ${i === 0 ? "active" : ""}`)
              button(class="page-link" button-page=pagination.currentPage + i) #{pagination.currentPage + i}
        else 
          -for(let i = -1; i <= 1; i++)
            li(class=`page-item ${i === 0 ? "active" : ""}`)
              button(class="page-link" button-page=pagination.currentPage + i) #{pagination.currentPage + i}
        if(pagination.currentPage < pagination.totalPage)
          li(class="page-item")
            button(class="page-link" button-page=pagination.currentPage + 1) Next
          li(class="page-item")
            button(class="page-link" button-page=pagination.totalPage) Last
      else 
        li(class='page-item active')
          button(class='page-link' button-page=1) 1