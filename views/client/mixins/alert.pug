mixin alert-success(time)
  -if(messages.success)
    div( data-time=time
        class='alert alert-success'
        show-alert
    ) 
      span #{messages.success}
      span(close-alert) x

mixin alert-error(time)
  -if(messages.error)
    div(class="alert alert-danger" show-alert data-time=`${time}`)
      span #{messages.error}
      span(close-alert) x